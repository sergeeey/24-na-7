<?xml version="1.0" encoding="utf-8"?>
<!--
  Debug override: разрешаем cleartext для локального тестирования.
  Этот файл перекрывает main/res/xml/network_security_config.xml ТОЛЬКО в debug-сборке.
  В release-сборке используется main/res версия (только HTTPS/WSS).

  Разрешает ws://192.168.x.x, ws://localhost, ws://10.0.2.2 — только локальные адреса.
-->
<network-security-config>
    <!-- Debug: разрешаем HTTP/WS для локального сервера разработки -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <!-- Доверяем пользовательским CA — для self-signed SSL в dev окружении -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
