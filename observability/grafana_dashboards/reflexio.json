{
  "dashboard": {
    "title": "Reflexio 24/7 Dashboard",
    "tags": ["reflexio", "production"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "reflexio_health",
            "legendFormat": "Health"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Uploads Total",
        "type": "stat",
        "targets": [
          {
            "expr": "reflexio_uploads_total",
            "legendFormat": "Uploads"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Transcriptions Total",
        "type": "stat",
        "targets": [
          {
            "expr": "reflexio_transcriptions_total",
            "legendFormat": "Transcriptions"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(reflexio_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 5,
        "title": "P95 Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(reflexio_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 Latency"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 6,
        "title": "DeepConf Confidence",
        "type": "graph",
        "targets": [
          {
            "expr": "reflexio_deepconf_avg_confidence",
            "legendFormat": "Avg Confidence"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 7,
        "title": "MCP Services Status",
        "type": "table",
        "targets": [
          {
            "expr": "reflexio_mcp_service_up",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ]
  }
}











